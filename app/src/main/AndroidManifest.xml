<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackerkernel.user.sqrfactor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginScreen" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".HomeScreen" />
        <activity android:name=".Index">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RedActivity"
            android:label="What's Red?"
            android:parentActivityName=".HomeScreen"/>
        <activity android:name=".ToolbarActivity" />
        <activity android:name=".DesignActivity"
            android:label="Post Design"
            android:parentActivityName=".HomeScreen"/>
        <activity android:name=".ArticleActivity"
            android:label="Post Article"
            android:parentActivityName=".HomeScreen"/>
        <activity android:name=".ResetPassword"
            android:label="Reset Password"
            android:parentActivityName=".LoginScreen"/>
        <activity android:name=".ProfileActivity"
            android:parentActivityName=".HomeScreen"/>
        <activity android:name=".CommentsPage"
            android:label="Comments"
            android:parentActivityName=".HomeScreen"/>
        <activity android:name=".MessagesActivity"
            android:label="Messages"
            android:parentActivityName=".HomeScreen"/>
        <activity android:name=".CompetitionsActivity"
            android:label="Competitions"
            android:parentActivityName=".HomeScreen"/>
        <activity android:name=".NotificationsActivity"
            android:label="Notifications"
            android:parentActivityName=".HomeScreen"/>
        <activity android:name=".JobActivity"
            android:label="Jobs/Internships"
            android:parentActivityName=".HomeScreen"></activity>
    </application>

</manifest>