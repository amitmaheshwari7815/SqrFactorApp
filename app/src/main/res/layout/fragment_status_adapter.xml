<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/news_post_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/news_auth_image"
                    android:layout_width="0sp"
                    android:layout_height="60sp"
                    android:src="@drawable/henry"
                    android:layout_weight="1"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp">

                    <TextView
                        android:id="@+id/news_auth_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Henry Cavill"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/news_post_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 minutes ago"
                        android:textStyle="bold"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/news_post_menu"
                    android:layout_width="20sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/ellipsis"
                    android:layout_marginRight="5sp"
                    android:layout_marginLeft="5sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:paddingLeft="10sp"
                android:paddingStart="10sp"
                android:paddingRight="10sp"
                android:paddingEnd="10sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/news_post_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check out this new design, by me."
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/news_short_Descrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check out this new design, by me."
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/news_post_image"
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/designimg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/news_post_like"
                        android:layout_width="30dp"
                        android:layout_height="50sp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/like_xml"
                        android:textAllCaps="false"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/news_post_likeList"
                        android:layout_width="60dp"
                        android:layout_height="50sp"
                        android:background="@android:color/transparent"
                        android:text="2 Like"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/news_comment"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_weight="1"
                    android:text="2 Comment"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/comment_xml"
                    android:drawableStart="@drawable/comment_xml"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:gravity="left|center_vertical"
                    android:drawablePadding="10sp"/>

                <Button
                    android:id="@+id/news_share"
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/share_xml"
                    android:drawablePadding="10sp"
                    android:drawableStart="@drawable/share_xml"
                    android:gravity="start|center_vertical"
                    android:text="Share"
                    android:textAllCaps="false"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/news_comment_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        app:cardElevation="1sp"
        app:cardBackgroundColor="#e6ecf5"
        android:layout_marginBottom="2sp"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginEnd="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/news_comment_image"
                    android:layout_width="0sp"
                    android:layout_height="60sp"
                    android:src="@drawable/henry"
                    android:layout_weight="1"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp">

                    <TextView
                        android:id="@+id/news_comment_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Henry Cavill"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/news_comment_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 minutes ago"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/news_comment_descrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nice work there!"
                android:textStyle="bold"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"/>

            <Button
                android:id="@+id/news_commnent_like"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:text="Like"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:drawableLeft="@drawable/like_xml"
                android:drawableStart="@drawable/like_xml"
                android:background="@android:color/transparent"
                android:paddingLeft="20sp"
                android:paddingStart="20sp"
                android:paddingRight="20sp"
                android:paddingEnd="20sp"
                android:textColor="@android:color/tertiary_text_dark"
                android:gravity="start|center_vertical"
                android:drawablePadding="10sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10sp"
       android:layout_marginStart="10sp"
       android:layout_marginRight="10sp"
       android:layout_marginEnd="10sp"
       android:layout_marginBottom="10sp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="103dp"
               android:orientation="horizontal"
               android:padding="20sp">

               <ImageView
                   android:id="@+id/news_user_imageProfile"
                   android:layout_width="50sp"
                   android:layout_height="50sp"
                   android:layout_marginTop="10sp"
                   android:src="@drawable/profilepic" />

               <EditText
                   android:id="@+id/news_user_commnentEdit"
                   android:layout_width="match_parent"
                   android:layout_height="50sp"
                   android:layout_margin="10sp"
                   android:background="@drawable/gray_border"
                   android:hint="Write comment..."
                   android:padding="10sp"
                   android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_marginBottom="10sp"
               android:layout_marginEnd="10sp"
               android:layout_marginRight="10sp"
               android:gravity="end"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/news_comment_post"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="end|center_vertical"
                   android:layout_margin="10sp"
                   android:background="@drawable/sqr_factor_btn_color"
                   android:paddingEnd="10sp"
                   android:paddingLeft="10sp"
                   android:paddingRight="10sp"
                   android:paddingStart="10sp"
                   android:text="Post Reply"
                   android:textAllCaps="false"
                   android:textColor="#fff"
                   android:textStyle="bold" />

           </LinearLayout>

       </LinearLayout>

   </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>

