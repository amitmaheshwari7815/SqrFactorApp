<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/activity_toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_cover_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/designimg"
                android:scaleType="fitStart"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/profile_profile_image"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="81dp"
                android:src="@drawable/profilepic" />

            <TextView
                android:id="@+id/profile_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="KEANU REEVES"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="150sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/profile_blueprintcnt"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textColor="@color/sqr"
                android:gravity="center"/>

            <TextView
                android:id="@+id/profile_portfoliocnt"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/sqr"/>

            <TextView
                android:id="@+id/profile_followerscnt"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/sqr"
                android:gravity="center"/>

            <TextView
                android:id="@+id/profile_followingcnt"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="21"
                android:textColor="@color/sqr"
                android:gravity="center"/>

            <TextView
                android:layout_width="40sp"
                android:layout_height="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/profile_blueprintClick"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Blueprint"
                android:gravity="center"
                android:textColor="@drawable/selector_follow"/>

            <TextView
                android:id="@+id/profile_portfolioClick"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Portfolio"
                android:textColor="@drawable/selector_follow"/>

            <TextView
                android:id="@+id/profile_followersClick"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Followers"
                android:gravity="center"
                android:textColor="@drawable/selector_follow"/>

            <TextView
                android:id="@+id/profile_followingClick"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Following"
                android:gravity="center"
                android:textColor="@drawable/selector_follow"/>

            <ImageView
                android:id="@+id/profile_about_morebtn"
                android:layout_width="40sp"
                android:layout_height="20sp"
                android:src="@drawable/ellipsis"/>

        </LinearLayout>

        <Button
            android:id="@+id/profile_editprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/edit_profile"
            android:textColor="#000"
            android:text="Edit Profile"
            android:paddingLeft="10sp"
            android:paddingStart="10sp"
            android:paddingRight="10sp"
            android:paddingEnd="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/gray_border"
            android:weightSum="4"
            android:elevation="@dimen/cardview_default_elevation">

            <android.support.design.widget.TabLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:id="@+id/tabs2"
                app:tabIndicatorColor="@android:color/transparent"
                android:layout_weight="3"
                app:tabTextAppearance="@style/TextAppearance.AppCompat.Small">

            </android.support.design.widget.TabLayout>

            <ImageView
                android:id="@+id/profile_morebtn"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ellipsis"
                android:padding="30sp"
                android:elevation="@dimen/cardview_default_elevation"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:id="@+id/profile_status_image"
                        android:layout_width="0sp"
                        android:layout_height="60sp"
                        android:src="@drawable/profilepic"
                        android:layout_weight="1"
                        android:layout_marginTop="10sp"/>

                    <EditText
                        android:id="@+id/profile_profile_write_post"
                        android:layout_width="0sp"
                        android:layout_height="150sp"
                        android:layout_weight="3"
                        android:hint="Share your thoughts here..."
                        android:gravity="top"
                        android:paddingLeft="10sp"
                        android:paddingStart="10sp"
                        android:paddingRight="10sp"
                        android:paddingEnd="10sp"
                        android:paddingTop="10sp"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20sp"
                        android:layout_marginEnd="20sp"
                        android:textSize="15sp"
                        android:inputType="text"/>

                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/profile_close_image"
                        android:layout_width="34dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="top|right"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:padding="0dp"
                        android:src="@drawable/ic_close"
                        android:layout_alignParentRight="true" />

                    <ImageView
                        android:id="@+id/profile_upload_image"
                        android:layout_width="330dp"
                        android:layout_height="130dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:scaleType="centerCrop"
                        tools:ignore="RtlCompat" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:weightSum="6">

                    <ImageView
                        android:id="@+id/profile_profile_camera"
                        android:layout_width="0sp"
                        android:layout_height="30sp"
                        android:src="@drawable/camera"
                        android:layout_marginLeft="20sp"
                        android:layout_marginStart="20sp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="5"
                        android:scaleType="fitStart"/>

                    <Button
                        android:id="@+id/profile_profile_postbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="10sp"
                        android:text="Post Status"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:background="@drawable/sqr_factor_btn_color"
                        android:textStyle="bold"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:paddingStart="10sp"
                        android:paddingEnd="10sp"
                        android:layout_gravity="end|center_vertical"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_recycler">
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="Personal Info"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:background="@drawable/gray_border"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keanu Reeves"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:padding="10sp"
                    android:layout_marginBottom="10sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Followers:"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:padding="10sp"
                    android:layout_marginBottom="10sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="12sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="10sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Following:"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:padding="10sp"
                    android:layout_marginBottom="10sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="21"
                    android:textSize="12sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="10sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>